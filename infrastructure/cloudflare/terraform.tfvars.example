# Example Terraform variables for quantum-rishi.com
# Copy to terraform.tfvars and fill in actual values

# Cloudflare API token with Zone:Edit permissions
cloudflare_api_token = "YOUR_CLOUDFLARE_API_TOKEN"

# Zone ID from Cloudflare dashboard
zone_id = "YOUR_ZONE_ID"

# Your server's public IP address
server_ip = "YOUR_SERVER_IP"

# Your mail server's IP (can be same as server_ip)
mail_ip = "YOUR_MAIL_IP"

# DKIM public key (generated by OpenDKIM)
# Run: opendkim-genkey -s qr2024 -d quantum-rishi.com
# Then extract the p= value from qr2024.txt
dkim_public_key = "MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQ..."
